extends ../layout

block moduleScript
  script(src='/javascripts/jquery.event.drag-2.2.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js')
  script(src='/javascripts/room.js')

block moduleStyle
  link(rel='stylesheet', href='/stylesheets/room.css')

block content
  - const navStyle = 'room'
  include ../navigation.pug
  article.container
    .row
      #canvas-menu.main-column
        input#color-picker(type='color', value='#000000')
        input#line-width-picker(type='range', min='1', max='40', value='1', step='0.1')
        input#clear-canvas(type='button', value='clear')
        input#eraser(type='button', value='eraser', state='off')
      #paper.main-column
        canvas(width=500 height=500)
      #chat.main-column
        ul#chat-list.scrollable
        #message
          input#message-input(type='text')
          input#message-button(type='button', value='send')
